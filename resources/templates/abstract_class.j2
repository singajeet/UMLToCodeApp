{% extends 'base_class_template.j2' %}
{% block import_block %}
from abc import ABCMeta, abstractmethod


{% endblock %}
{% block class_variables %}
    __metaclass__ = ABCMeta

{% endblock %}
{% block abstract_method_block %}
{% if methods %}

    # --- abstract methods ---
{% for method, method_details in methods.items() %}
{% if method_details.type == 'abstract' %}
    @abstractmethod
{% include 'method_template.j2' %}
{% endif %}
{% endfor %}

    # --- end abstract methods ---
{% endif %}
{% endblock %}
