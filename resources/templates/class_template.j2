{% from 'macro_utils.j2' import expand_arg, expand_args, print_field,
expand_return, print_property %}
#-- start class --
class {{ class_name }} ({{ inherits|default('object') }}):
    """
    {{ description|default('No Description') }}

{% if examples %}
    Example:
        {{ examples }}

{% endif %}
{% if notes %}
    Notes:
        {{ notes }}

{% endif %}
    """
{# --- built-in functions def --- #}
{% block builtin %}
{% endblock %}
{# --- end built-in funcs def --- #}
{% if constructors %}
    #-- constructors --
{% for construct_idx, construct_details in constructors.items() %}
{%- if construct_idx == '0' %}
    def __init__(self):
        """{{ construct_details.description|default('-- description --') }}

        """
{% if properties %}
        #-#-- Init properties --
{% for prop_name, prop in properties.items() %}
        {{ print_field(prop_name, prop, '_')|indent(8) }}
        {%- endfor %}
        #-#-- end init properties --

{% endif %}
{% if fields %}
        #-#-- Init fields --
{% for field_name, field_details in fields.items() %}
        {{ print_field(field_name, field_details)|indent(8) }}
        {%- endfor %}
        #-#-- end init fields --

{% if construct_details.body %}
        {{ construct_details.body }}

{% endif %}
{% else %}
        {{ construct_details.body|default('pass') }}

{% endif %}
{% else %}
    def __init__(self{{ expand_args(construct_details.args) }}):
        """{{ construct_details.description|default('-- description --') }}
{% if construct_details.args and construct_details.args|length >0 %}

        Args:
{% for arg, arg_details in construct_details.args.items() %}
            {{ arg }} ({{ arg_details.type }}): {{ arg_details.description }}
{% endfor %}

{% endif %}
        """
        {{ construct_details.body|default('pass') }}

{% endif %}
{% endfor %}
    #-- end constructors --

{% endif %}
{% if properties %}
    #-- properties --
{% for prop_name, prop in properties.items() %}
    {{ print_property(prop_name, prop)|indent() }}
    {%- endfor %}
    #-- end properties --

{% endif %}
{% if methods %}
    #-- define methods --
{% for method, method_details in methods.items() %}
{% if method_details.args|length <= 0 %}
    def {{ method }}(self):
        """{{ method_details.description|default('No description') }}

        """
{% else %}
    def {{ method }}(self{{ expand_args(method_details.args) }}) -> {{  expand_return(method_details.returns) }}:
        """{{ method_details.description|default('No description') }}

        Args:
{% for arg, arg_details in method_details.args.items() %}
            {{ arg }} ({{ arg_details.type }}): {{ arg_details.description }}
{% endfor %}

        """
{% endif %}
        {{ method_details.body|default('pass') }}
{% endfor %}

    #-- end define methods --
{% endif %}
#-- end class --
