    #singleton class new method
    def __new__(cls, *args, **kwargs):
        """{{ singleton_new_func_desc|default('No description') }}

        """
        if cls != type(cls.{{ singleton_var_name|default('__singleton_object') }}):
            cls.{{ singleton_var_name|default('__singleton_object') }} = object.__new__(cls, *args, **kwargs)
        return cls.{{ singleton_var_name|default('__singleton_object') }}

